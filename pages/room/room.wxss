/**home.wxss**/

.card-list {
  margin-top: 150rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.card {
  margin: 20rpx 0;
  width: 48%;
  border: 1rpx solid #ccc;
}

.card-logo {
  width: 100%;
}

.card-label {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
}

.card-hot {
  font-size: 32rpx;
  color: #999;
}

.card-anounce {
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #999;
}