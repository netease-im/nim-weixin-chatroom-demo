/**app.wxss**/
page {
  width: 100%;
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.center {
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  background-color: #f0f6ff;
} 

.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  /* align-content: space-around; */
  padding: 20rpx 30rpx;
}

.header .title {
  font-size: 48rpx;
  text-align: left;
}

.header .avatar {
  width: 64rpx;
  height: 64rpx;
}